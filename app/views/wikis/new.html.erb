<div class="row">
<div class="large-6 large-centered columns">
	<h1><b>New Wiki</b></h1>


  <%= form_for @wiki do |f| %>
  
  <%= f.text_field :title %>

  <%= f.text_area :body %>

  <% if current_user.role == 'premium' %>
  <%= f.check_box :private %>
  <% end %>

  <%= f.submit "Save" %>

  <% end %>


</div>
</div>
